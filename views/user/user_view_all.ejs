<!DOCTYPE html>
<html>
<head>
    <title> View all Users</title>

</head>
<body>
<h1>Users</h1>
<a href="/user/add">Add New user</a>
<br/>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Password</th>
        <th>Actions</th>
    </tr>
    <% for(var i = 0; i <users.length;i++){%>
    <tr>
        <td><%= users[i].user_id %></td>
        <td><%= users[i].user_name %></td>
        <td><%= users[i].password %></td>
        <td>
            <a href='/user/edit/?user_id=<%= users[i].user_id%>'>
                Edit
            </a>
        </td>
    </tr>
    <% } %>
</table>
<br/><a href="/">Return to Homepage</a>
</body>

</html>